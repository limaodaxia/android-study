<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />

    <queries>
        <package android:name="com.tencent.map" />
        <!-- android 11后要进行声明才能获得可见性 -->
    </queries>
    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:preserveLegacyExternalStorage="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Androidstudy">
        <activity
            android:name=".learningresolver.ContentResolverActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FilePathActivity"
            android:exported="true">

        </activity>
        <activity
            android:name=".ui.GoodsDetailActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppCompatTheme" />
        <activity
            android:name=".ui.ShoppingChannelActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/AppCompatTheme"></activity>
        <activity
            android:name=".ui.ShoppingCartActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppCompatTheme" />
    </application>

</manifest>